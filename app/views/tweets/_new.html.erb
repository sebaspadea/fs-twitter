<div class="modal fade" id="tweetModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="tweetModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h5 class="modal-title" id="tweetModalLabel">Crear tweet</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= simple_form_for @tweet do |f| %>
        <div class="modal-body">
            <div id="formulario" class="container-fluid text-center">
              <div class="form-inputs">
                <div class="row">
                  <div class="col-md-12">
                    <%= f.input :message,  :label => "Qué quieres twittear?", placeholder:"Máximo 400 carácteres."%>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <div class="modal-footer d-flex justify-content-around">
          <div class="form-actions">
            <button type="button" class="btn btn-secondary pt-2" data-dismiss="modal">Cerrar</button>
            <%= f.submit "Crear tweet!", class:"btn btn-primary mr-3" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>